{
  "background": {
    "page": "background.html"
  },
  "manifest_version": 2,
  "name": "Copy to BibTeX",
  "description": "Copy page information in online BibTeX style.",
  "version": "1",
  "author": "Bas Netten",
  "browser_action": {
    "default_title": "Copy to BibTeX"
  },
  "chrome_url_overrides" : {
  },
  "icons": {
    "16":   "icon16.png",
    "48":   "icon48.png",
    "128":  "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ]
}
